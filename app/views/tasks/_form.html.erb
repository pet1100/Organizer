<%= simple_form_for @task do |f| %>
	<%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :repeat_after %>
  <%= f.input :priority, collection: Task.priorities.to_a.collect{|c| [t(c[0]), c[0]]} %>
  <%= f.association :users, :as => :check_boxes, label_method: :name, include_hidden: false, :input_html => {:multiple => true}  %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= simple_form_for(@task, :method => :delete) do |f| %>
	<%= f.button :submit, t("task.destroy", :default => 'Destroy Task'), class: "btn btn-danger mt-1", data: {confirm: t("task.destroy.confirm", :default => 'Are you sure')} %>
<% end %>

